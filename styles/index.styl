#render-text
  display table
  width 100%
  .sign
    display table-row
  .bubble, .text
    display table-cell
    padding-bottom 20px
  .bubble
    width 120px
  a.bubble-inner
    display block
    color #333
    background-color #eee
    &:hover
      color #fff
      background-color #82a8c7
    width 100px
    height 100px
    border-radius 50px
    position relative
    &, .top, .bottom
      display block
      position absolute
      width 100px
    text-align center
    &:hover
      border 0
    .top
      font-size 50px
      height 50px
      top 0
    .bottom
      font-family 'Open Sans Condensed', sans-serif
      font-size 20px
      bottom 15px
